<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_about_us"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#562a61"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:contentDescription="@string/cd_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="28dp"
        android:singleLine="true"
        android:text="@string/activity_about_us__txt__follow_us"
        android:textColor="#fff"
        android:textSize="36dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/facebook"
            android:contentDescription="@string/cd_facebook" />

        <ImageView
            android:id="@+id/google_plus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/google_plus"
            android:contentDescription="@string/cd_google_plus" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/twitter"
            android:contentDescription="@string/cd_twitter" />
    </LinearLayout>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
        android:singleLine="true"
        android:text="@string/activity_about_us__txt__email_address"
        android:textColor="@color/white_text"
        android:textSize="16dp" />

</LinearLayout>